<body>
    <table align="center">
        <tr>
            <td>
<form action="/toy/edit/{{ toy._id }}" method="post">
   <h1>Edit toy</h1>
   Toy model: <input type="text" name="model" id="" required value="{{ toy.model }}">
   <br><br>
   Toy height: <input type="text" name="model" id="" required value="{{ toy.height }}">
   <br><br>
   Toy price: <input type="text" name="model" id="" required value="{{ toy.price }}">
   <br><br>
   Toy image: <input type="url" name="image" id="" required value="{{ toy.image }}">
   <img src="{{ toy.image }}" alt="" width="100" height="100">
   <br><br>
   Toy color: <input type="text" name="model" id="" required value="{{ toy.color }}">
   <br><br>
   {{!-- {{#equal toy.color "Black"}}
   <input type="radio" name="color" value="Black" checked="true"> Black
   <input type="radio" name="color" value="White"> White
   <input type="radio" name="color" value="Yellow"> Yellow
   <input type="radio" name="color" value="Blue"> Blue
   {{/equal}}
   {{#equal toy.color "White"}}
   <input type="radio" name="color" value="Black"> Black
   <input type="radio" name="color" value="White" checked="true"> White
   <input type="radio" name="color" value="Yellow"> Yellow
   <input type="radio" name="color" value="Blue"> Blue
   {{/equal}}
   {{#equal toy.color "Yellow"}}
   <input type="radio" name="color" value="Black" > Black
   <input type="radio" name="color" value="White"> White
   <input type="radio" name="color" value="Yellow" checked="true"> Yellow
   <input type="radio" name="color" value="Blue"> Blue
   {{/equal}}
   {{#equal toy.color "Blue"}}
   <input type="radio" name="color" value="Black"> Black
   <input type="radio" name="color" value="White"> White
   <input type="radio" name="color" value="Yellow"> Yellow
   <input type="radio" name="color" value="Blue"  checked="true"> Blue
   {{/equal}}
   <br><br> --}}
   <input type="submit" value="Edit">
</form>
